@using DataAccessLayer.Klase

@{
    ViewBag.Title = "DomenePaketiDodaj";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<Domena> d = (List<Domena>) ViewData["d"];
}

<br />
<form action="/domene/DomenePaketiSnimi">
    <div class="form-group">
        <label>Domen:</label>
        <select id="Domen" name="Domen" class="form-control">
            @foreach (Domena x in d)
            {
                <option value="@x.Id">@x.Naziv </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Cijena aktivacije:</label>
        <input type="text" name="CijenaAktivacije" class="form-control" placeholder="Cijena aktivacije"/>
    </div>
    <div class="form-group">
        <label>Cijena za prvu godinu:</label>
        <input type="text" name="CijenaZaPrvuGodinu" class="form-control" placeholder="Cijena za prvu godinu"/>
    </div>
    <div class="form-group">
        <label>Cijena za svaku narednu godinu:</label>
        <input type="text" name="CijenaZaSvakuNarednuGodinu" class="form-control" placeholder="Cijena za svaku narednu godinu"/>
    </div>
    <div class="form-group">
        <label>Cijena uz web hosting:</label>
        <input type="text" name="CijenaUzWebHosting" class="form-control" placeholder="Cijena uz web hosting"/>
    </div>
    <input type="submit" value="Snimi" class="btn btn-default"/>
</form>