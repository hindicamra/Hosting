@using DataAccessLayer.Klase

@{
    ViewBag.Title = "Dodaj domen - domen paket";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<DomenePaketi> dp = (List<DomenePaketi>)ViewData["dp"];
    List<Domena> d = (List<Domena>)ViewData["d"];
}

<br />
<a href="/domene/DomeneDodaj" class="btn btn-default">Novi domen</a>

<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
        <th>Domen</th>
        <th>Akcija</th>
    </thead>

    @foreach (Domena x in d)
    {
        <tr>
            <td>@x.Naziv</td>
            <td><a href="/domene/deaktivacijadomen?id=@x.Id" class="btn btn-default">Deaktiviraj</a></td>
        </tr>
    }
</table>

<a href="/domene/DomenePaketiDodaj" class="btn btn-default">Novi domen paket</a>
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Domen</th>
    <th>Cijena aktivacije</th>
    <th>Cijena uz web hsoting</th>
    <th>Cijena produzenje</th>
    <th>Akcija</th>
    </thead>

    @foreach (DomenePaketi x in dp)
    {
        <tr>
            <td>@x.Domena.Naziv</td>
            <td>@x.CijenaAktivacije</td>
            <td>@x.CijenaUzWebHosting</td>
            <td>@x.SvakaNarednaGodina</td>
            <td><a href="/domene/deaktivacijapaketa?id=@x.Id" class="btn btn-default">Deaktiviraj</a></td>
        </tr>
    }
</table>