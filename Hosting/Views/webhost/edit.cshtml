@using DataAccessLayer.Klase

@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<Serveri> s = (List<Serveri>)ViewData["s"];
    HostingPaketi h = (HostingPaketi)ViewData["h"];
}

<h2>edit</h2>

<form action="/webhost/HostingPaketiSnimiEdit">
    <input type="hidden" name="id" value="@h.Id"/>
    <div class="form-group">
        <label>Paket:</label>
        <input type="text" name="Paket" class="form-control" placeholder="Paket" value="@h.NazivPaketa" />
    </div>
    <div class="form-group">
        <label>Prostor:</label>
        <input type="text" name="Prostor" class="form-control" placeholder="Prostor" value="@h.Prostor" />
    </div>
    <div class="form-group">
        <label>Promet:</label>
        <input type="text" name="Promet" class="form-control" placeholder="Promet" value="@h.Promet" />
    </div>
    <div class="form-group">
        <label>Baza:</label>
        <input type="text" name="Baza" class="form-control" placeholder="Baza" value="@h.Baza" />
    </div>
    <div class="form-group">
        <label>E-mail adresa:</label>
        <input type="text" name="EmailAdresa" class="form-control" placeholder="E-mail adresa" value="@h.EmailAdresa" />
    </div>
    <div class="form-group">
        <label>Cijena:</label>
        <input type="text" name="Cijena" class="form-control" placeholder="Cijena" value="@h.Cijena" />
    </div>
    <div class="form-group">
        <label>IPV4:</label>
        <input type="text" name="IPV4" class="form-control" placeholder="IPV4" value="@h.IPv4" />
    </div>
    <div class="form-group">
        <label>IPV6:</label>
        <input type="text" name="IPV6" class="form-control" placeholder="IPV6" value="@h.IPv6" />
    </div>
    <div class="form-group">
        <label>Addon domena:</label>
        <input type="text" name="AddonDomena" class="form-control" placeholder="Addon domena" value="@h.AddonDomene" />
    </div>
    <div class="form-group">
        <label>Parked domena:</label>
        <input type="text" name="ParkedDomena" class="form-control" placeholder="Parked domena" value="@h.ParkedDomene" />
    </div>
    <div class="form-group">
        <label>FTP naloga:</label>
        <input type="text" name="FTPNalog" class="form-control" placeholder="FTP nalog" value="@h.FTPNaloga" />
    </div>
    <div class="form-group">
        <label>Pod domena:</label>
        <input type="text" name="PodDomena" class="form-control" placeholder="Pod domena" value="@h.PodDomena" />
    </div>
    <div class="form-group">
        <label>Server:</label>
        <select id="Server" name="Server" class="form-control">
            @foreach (Serveri x in s)
            {
                if (x.Naziv == h.Serveri.Naziv)
                {
                    <option value="@x.Id" selected>@x.Naziv </option>
                }
                else
                {
                    <option value="@x.Id">@x.Naziv </option>
                }
            }
        </select>
    </div>
    <input type="submit" value="Snimi" class="btn btn-default"/>
</form>