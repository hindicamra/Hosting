@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hosting</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })
                @Html.ActionLink("WEB HOSTING", "Index", "webhost", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("VPS", "Index", "vps", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("DEDICATED", "Index", "dedicated", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("DOMENE", "Index", "domene", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("SSL", "Index", "ssl", new { area = "" }, new { @class = "navbar-brand" })</li>
                    
                </ul>
                <ul class="nav pull-right">
                    @Html.ActionLink("Korisnički panel", "Login", "Klijent", new { area = "" }, new { @class = "navbar-brand", @style = "color: rgb(37, 171, 226);" })
                </ul>
            </div>
        </div>
        <div style="height: 4px;  background-color: rgb(37, 171, 226)"></div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="height: 8px; background-color: rgb(37, 171, 226)"></div>
            <div class="row">
                <div class="col-md-9">
                    <p>&copy; @DateTime.Now.Year - Hosting</p>
                </div>
                <div class="col-md-3">
                    <p>Powered by ASP.NET MVC & MSSQL</p>
                </div>
            </div>
        </footer>

        <div class="row">
            <div class="col-md-3">
                <b>Adresa :</b> <br />
                000 Adresa 00 0000, Donji Vakuf,<br /> Bosna i Hercegovina <br /> <br />

                Banka: ImeBanke <br />
                Žiro račun: 0000 0000 0000 0000
            </div>

            <div class="col-md-3">
                <b>Kontakt:</b> <br />
                Tel. +387 00 000-000 <br />
                Fax. +387 00 000-000 <br />
                Prodaja: <a href="mailto:prodaja@hosty.ba" style="text-decoration: none;">prodaja@hosty.ba</a> <br />
                Info: <a href="mailto:prodaja@hosty.ba" style="text-decoration: none;">info@hosty.ba</a> <br />
                Zloupotrebe: <a href="mailto:prodaja@hosty.ba" style="text-decoration: none;">abouse@hosty.ba</a>
            </div>

            <div class="col-md-3">
                <b>UVJETI I PRAVILA:</b> <br />

                <a href="/Home/uvjeti" style="color: black; text-decoration: none">> Uvjeti korištenja</a> <br />
                <a href="/Home/osobnipodaci" style="color: black; text-decoration: none">> Osobni podaci</a>
            </div>
        </div>

    </div>


    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>