@using DataAccessLayer.Klase

@{
    ViewBag.Title = "SSL";
    List<SSLPaketi> sslp = (List<SSLPaketi>)ViewData["sslp"];
}
<br />
<div class="row">
    <div>
        <div class="col-md-2">
            <img src="~/slike/7.png" width="170" height="130" />
        </div>

        <div class="col-md-4">
            <b>ZAŠTO SSL CERTIFIKAT?</b> <br />
            SSL (Secure Socket Layer) certifikat štiti Vaše poslovne transakcije. Povećajte povjerenje posjetilaca Vaše web stranice i dostignite puni potencijal u online poslovanju.
        </div>
    </div>

    <div>
        <div class="col-md-2">
            <img src="~/slike/8.jpg" width="170" height="130" />
        </div>

        <div class="col-md-4">
            <b>SVRHA SSL CERTIFIKATA?</b> <br />
            SSL certifikat obezbjeđuje enkriptovanu komunikaciju između klijenta i Vaše web stranice te podatci koji putuju Internetom nisu vidljivi drugima.
        </div>
    </div>
</div>

<br />
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Certifikat</th>
    <th>Vrsta provjere</th>
    <th>Nivo provjere</th>
    <th>Zelena traka</th>
    <th>Garancija izdavača</th>

    <th>Broj osiguranih poddomena</th>
    <th>Brzina izdavanja certifikata</th>
    <th>SSL enkripcija</th>
    <th>Kompaktibilnost sa minimalno 99% browsera</th>
    <th>Kompaktibilnost sa mobilnim uređajima</th>
    <th>Godišnja cijena -KM</th>
    </thead>

    @foreach (SSLPaketi x in sslp)
    {
        <tr>
            <td>@x.Naziv</td>
            <td>@x.VrstaProvjere</td>
            <td>@x.NivoPovjerenja</td>
            <td>@x.ZelenaTraka</td>
            <td>@x.GrancijaIzdavaca</td>
            <td>@x.BrojOsiguranihPoddomena</td>
            <td>@x.BrzinaIzdavanja</td>
            <td>@x.SSLEnkripcija</td>
            <td>@x.Kompaktibilno</td>
            <td>@x.KompaktibilnoSaMobitelima</td>
            <td>@x.Cijena</td>
            <td> <a href="/Narudzbe/sslkupi?sslid=@x.Id" class="btn btn-default">Kupi</a> </td>
        </tr>
    }
</table>