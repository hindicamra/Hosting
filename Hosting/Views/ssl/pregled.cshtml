@using DataAccessLayer.Klase

@{
    ViewBag.Title = "SSL";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SSLPaketi> s = (List<SSLPaketi>)ViewData["s"];
}

<br />
@Html.ActionLink("Novi SSL", "sslDodaj", "ssl", null, new { @class = "btn btn-default" })<br />
<br />
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Certifikat</th>
    <th>Vrsta provjere</th>
    <th>Nivo provjere</th>
    <th>Zelena traka</th>
    <th>Garancija izdavača</th>

    <th>Broj osiguranih poddomena</th>
    <th>Brzina izdavanja certifikata</th>
    <th>SSL enkripcija</th>
    <th>Kompaktibilnost sa minimalno 99% browsera</th>
    <th>Kompaktibilnost sa mobilnim uređajima</th>
    <th>Godišnja cijena -KM</th>
    <th>Akcija</th>
    </thead>

    @foreach (SSLPaketi x in s)
    {
        <tr>
            <td>@x.Naziv</td>
            <td>@x.VrstaProvjere</td>
            <td>@x.NivoPovjerenja</td>
            <td>@x.ZelenaTraka</td>
            <td>@x.GrancijaIzdavaca</td>
            <td>@x.BrojOsiguranihPoddomena</td>
            <td>@x.BrzinaIzdavanja</td>
            <td>@x.SSLEnkripcija</td>
            <td>@x.Kompaktibilno</td>
            <td>@x.KompaktibilnoSaMobitelima</td>
            <td>@x.Cijena</td>
            <td><a href="/ssl/editSSL?id=@x.Id" class="btn btn-default">Edit</a>
                <a href="/ssl/delete?id=@x.Id" class="btn btn-danger">Deaktiviraj</a></td>
        </tr>
    }
</table>
