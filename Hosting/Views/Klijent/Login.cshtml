
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
    <form action="/Klijent/Provjera">
        <div style="width: 300px; height: 210px; margin: 0 auto; background: rgb(233, 235, 228); border-radius: 10px">
            <div style="margin-left: 11px">
                <label>Vaša IP adresa je: @Request.UserHostAddress</label>
                <div>
                    <label>User name:</label>
                </div>
                <div>
                    <input type="text" name="username" placeholder="Username" class="form-control" style="background: rgb(250, 255, 189)" required/>
                </div>

                <div>
                    <label>Password:</label>
                </div>
                <div>
                    <input type="password" name="password" placeholder="Password" class="form-control" style="background: rgb(250, 255, 189)" required/>
                </div><br/>

                <div>
                    <input type="submit" value="Login" class="btn btn-default" style="float: right; margin-right: 11px;"/>
                </div><br/>
            </div>
        </div>

    </form>