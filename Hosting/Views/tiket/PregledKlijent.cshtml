@using DataAccessLayer.Klase

@{
    ViewBag.Title = "PregledAdmin";
    Layout = "~/Views/Shared/_LayoutKlijent.cshtml";
    List<Tiketi> t = (List<Tiketi>)ViewData["t"];
}

<h2>Tiketi</h2>

<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Naslov:</th>
    <th>Datum:</th>
    <th>Akcija:</th>
    </thead>

    @foreach (Tiketi x in t)
    {
        if (x.Odgovoreno == true)
        {
            <tr style="background: red">
                <td>@x.Naslov</td>
                <td>@x.Datum</td>

                <td>
                    <a href="/tiket/zatvoriK?id=@x.Id" class="btn btn-default glyphicon glyphicon-remove"></a>
                    <a href="/Tiket/OtvoriK?id=@x.Id" class="btn btn-default">Otvori tiket</a>
                </td>
            </tr>
        }
        else
        {
            <tr style="background:aquamarine">
                <td>@x.Naslov</td>
                <td>@x.Datum</td>
                
                <td>
                    <a href="/tiket/zatvoriK?id=@x.Id" class="btn btn-default glyphicon glyphicon-remove"></a>
                    <a href="/Tiket/OtvoriK?id=@x.Id" class="btn btn-default">Otvori tiket</a>
                </td>
            </tr>
        }
    }
</table>