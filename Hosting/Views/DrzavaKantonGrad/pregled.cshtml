@using DataAccessLayer.Klase

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<Drzave> d = (List<Drzave>)ViewData["d"];
    List<Kanton> k = (List<Kanton>)ViewData["k"];
    List<Grad> g = (List<Grad>)ViewData["g"];
}

<br />
@Html.ActionLink("Nova država", "DrzavaDodaj", "DrzavaKantonGrad", null, new { @class = "btn btn-default" })<br />
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Država:</th>
    </thead>

    @foreach (Drzave x in d)
    {
        <tr>
            <td>@x.Naziv</td>
        </tr>
    }
</table>

<br/>
@Html.ActionLink("Novi kanton", "KantonDodaj", "DrzavaKantonGrad", null, new { @class = "btn btn-default" })<br />
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
        <th>Država->Kanton:</th>
    </thead>

    @foreach (Kanton x in k)
    {
        <tr>
            <td>@x.Drzave.Naziv->@x.Naziv</td>
        </tr>
    }
</table>

<br/>
@Html.ActionLink("Novi grad", "GradDodaj", "DrzavaKantonGrad", null, new { @class = "btn btn-default" })<br />
<table class="table table-striped" style="background-color: rgb(248, 248, 248)">
    <thead>
    <th>Država->Kanton->Grad:</th>
    </thead>

    @foreach (Grad x in g)
    {
        <tr>
            <td>@x.Kanton.Drzave.Naziv->@x.Kanton.Naziv->@x.Naziv</td>
        </tr>
    }
</table>

